---
//@ts-nocheck
import Layout1 from "../layouts/Layout1.astro";

// 1. Capturar el ID de la URL
const { id } = Astro.params;

// 2. Hacer fetch del personaje específico
const response = await fetch(`https://thesimpsonsapi.com/api/characters/${id}`);
const character = await response.json();

const title = `${character.name} | The Simpsons`;
---

<Layout1 title={title} />

<section id="character-detail">
  <!-- Botón volver -->
  <a href="/projects/thesimpsons" class="back-btn flex-row"> ← </a>

  <article class="detail-card flex-column">
    <!-- Imagen del personaje -->
    <div class="flex-row">
      <img
        src={`https://cdn.thesimpsonsapi.com/500${character.portrait_path}`}
        alt={character.name}
        transition:name={`img-${id}`}
      />

      <!-- Información principal -->
      <div class="info-container flex-column">
        <h1 transition:name={`name-${id}`}>{character.name}</h1>

        <div class="basic-info flex-row">
          {
            character.age && (
              <p>
                <strong>Age:</strong> {character.age} años
              </p>
            )
          }
          {
            character.gender && (
              <p>
                <strong>Gender:</strong> {character.gender}
              </p>
            )
          }
          {
            character.occupation && (
              <p>
                <strong>Occupation:</strong> {character.occupation}
              </p>
            )
          }
          {
            character.status && (
              <p class={`status ${character.status.toLowerCase()}`}>
                <strong>Status:</strong> {character.status}
              </p>
            )
          }
        </div>
      </div>
    </div>
    <!-- Frases icónicas -->
    {
      character.phrases && character.phrases.length > 0 && (
        <div class="phrases-section flex-column">
          <ul>
            {character.phrases.map((phrase) => (
              <li>"{phrase}"</li>
            ))}
          </ul>
        </div>
      )
    }
  </article>
</section>

<style>
  body {
    background-color: #d5e0f7;
  }

  #character-detail {
    gap: 25px;
  }

  /* Botón volver */
  .back-btn {
    align-self: flex-start;
    width: 10px;
    height: 10px;
    padding: 20px;
    background-color: #fff;
    border: solid 2px var(--clr-border);
    border-radius: 50px;
    color: var(--clr-dark);
    transition: var(--transition);
    font-size: 1.2rem;
    display: none;
  }

  /* Card principal */
  .detail-card {
    /* background-color: #fff; */
    /* box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05); */
    border-radius: 15px;
    gap: 10px;
    max-width: 800px;
    width: 100%;
  }

  .detail-card > div.flex-row {
    flex-wrap: wrap;
    width: 100%;
    background-color: #fff;
    border-radius: 20px;
    overflow: hidden;
  }

  /* Imagen */

  .detail-card img {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 10px;
    align-self: flex-end;
  }

  /* Información */
  .info-container {
    width: 100%;
    gap: 0px;
    align-items: flex-start;
  }

  .info-container h1 {
    font-size: 1.7rem;
    text-align: center;
    width: 100%;
  }

  /* Info básica */
  .basic-info {
    width: 100%;
    gap: 10px;
    flex-wrap: wrap;
    gap: 7px;
    align-items: flex-start;
    background-color: #f8f9fa;
    padding: 15px;
    border-radius: 10px;
  }

  .basic-info p {
    font-size: 0.8rem;
    color: var(--clr-text);
    padding: 8px 16px;
    background-color: #f8db27;
    border-radius: clamp(17px, 1.2vw, 50px);
    width: auto;
    text-align: center;
  }

  .basic-info strong {
    color: var(--clr-dark);
  }

  /* Estado (Alive/Deceased) */
  .status.alive {
    color: #28a745;
  }

  .status.deceased {
    color: #dc3545;
  }

  /* Frases */
  .phrases-section {
    width: 100%;
    gap: 10px;
    align-items: flex-start;
  }

  .phrases-section ul {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
  }

  .phrases-section li {
    background-color: #fff;
    padding: 10px 22px;
    border-radius: clamp(17px, 1.2vw, 50px);
    color: var(--clr-text);
    font-style: italic;
    font-size: 0.95rem;
    width: 100%;
  }

  /* Hover effects */
  @media (hover: hover) {
    .back-btn:hover {
      background-color: var(--clr-white);
    }
  }

  /* Responsive */
  @media (min-width: 750px) {
    .detail-card {
      align-items: flex-start;
    }

    .detail-card > div.flex-row {
      background-color: #fff;
      justify-content: start;
      height: fit-content;
      gap: 10px;
    }

    .basic-info {
      padding: 10px 0;
      justify-content: start;
      background-color: transparent;
    }

    .basic-info p {
      text-align: left;
    }

    .image-container {
      width: 40%;
      min-width: 250px;
    }

    .info-container {
      width: 60%;
    }

    .info-container h1 {
      text-align: left;
      font-size: 2.2rem;
      padding-left: 0;
      margin-top: 10px;
    }

    .phrases-section ul {
      justify-content: start;
    }

    .phrases-section ul li {
      max-width: fit-content;
    }
  }
</style>
